<section class="card">
  <h1><%= mode === "new" ? "New Module" : "Edit Module" %></h1>

  <% if (error) { %>
    <div class="alert"><%= error %></div>
  <% } %>

  <form method="POST" action="<%= mode === "new" ? "/admin/modules/new" : ("/admin/modules/" + module.id + "/edit") %>" class="form">
    <label>
      Title
      <input name="title" value="<%= module.title %>" required />
    </label>

    <label>
      Description
      <textarea name="description" rows="3"><%= module.description %></textarea>
    </label>

    <label>
      Sort Order (lower shows first)
      <input name="sort_order" type="number" value="<%= module.sort_order %>" />
    </label>

    <div class="row">
      <button class="btn" type="submit">Save</button>
      <a class="btn btn-ghost" href="/admin">Cancel</a>
    </div>
  </form>
</section>
