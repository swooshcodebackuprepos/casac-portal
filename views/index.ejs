<section class="hero">
  <h1>Welcome</h1>
  <p class="muted">Choose a module, view lessons, watch recordings, and download resources.</p>
</section>

<section class="grid">
  <% modules.forEach(m => { %>
    <a class="card card-link" href="/modules/<%= m.id %>">
      <h2><%= m.title %></h2>
      <p class="muted"><%= m.description %></p>
    </a>
  <% }) %>
</section>
